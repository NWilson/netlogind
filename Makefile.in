CC = @CC@
CFLAGS = @CFLAGS@ -I.
CCLD = $(CC)
DEFS = @DEFS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

all:: netlogind

Makefile: Makefile.in
	./config.status
config.h: config.h.in
	./config.status

OBJS = util.o netlogind.o net.o

util.c: util.h
util.h: config.h
net.c: util.h net.h
net.h:
netlogind.c: util.h net.h

.c.o:
	$(CC) $(CFLAGS) -c -o $@ $<

netlogind: $(OBJS)
	rm -f netlogind
	$(CCLD) $(CFLAGS) $(LDFLAGS) -L. -o $@ $(OBJS) $(LIBS)

clean::
	rm -f netlogind $(OBJS)
