CC = @CC@
CFLAGS = @CFLAGS@ -I.
CCLD = $(CC)
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

all:: netlogind

Makefile: Makefile.in
	./config.status
config.h: config.h.in
	./config.status

# util,net < os,pam < session,netlogind
OBJS = util.o net.o os.o pam.o session.o netlogind.o

util.c: util.h
util.h: config.h
net.c: util.h net.h
net.h:
os.c: os.h
os.h:
session.c: session.h config.h
session.h:
netlogind.c: util.h net.h os.h session.h

.c.o:
	$(CC) $(CFLAGS) -c -o $@ $<

netlogind: $(OBJS)
	rm -f netlogind
	$(CCLD) $(CFLAGS) $(LDFLAGS) -L. -o $@ $(OBJS) $(LIBS)

clean::
	rm -f netlogind $(OBJS)

config-clean:
	rm -f config.status config.cache config.log
